<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToastShort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/click_for_toast" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToastLong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/toast_for_duration_log" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSnackbarShort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/postional_toast" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSnackbarLong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toast_for_positional_bottom" />

</LinearLayout>